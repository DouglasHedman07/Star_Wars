<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PantallaLand1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkghorizontal">

    <Button
        android:id="@+id/botonSpaceships"
        android:layout_width="130dp"
        android:layout_height="205dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/spaceships"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/botonPeople"
        android:layout_width="130dp"
        android:layout_height="205dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/people"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonSpaceships"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/botonVehicles"
        android:layout_width="130dp"
        android:layout_height="205dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/vehicles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonPeople"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/botonPlanets"
        android:layout_width="130dp"
        android:layout_height="205dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/planets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonVehicles"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/numeroPantalla1"
        android:layout_width="52dp"
        android:layout_height="62dp"
        android:layout_marginStart="321dp"
        android:layout_marginEnd="322dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/boton2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/reproductor1"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>